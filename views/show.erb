<!DOCTYPE html>
<!-- A photo gallery -->

<html>
  <head>
    <link rel="stylesheet" type="text/css" href="style.css">
    <meta charset="UTF-8">
    <title>My <%= @gallery.name %> Gallery</title>
  </head>
  <body>
    <h1><%= @gallery.name %></h1>
    <% @images.each do |image| %>
      <img src="<%= image.url %>" alt="<%= image.name %>">
    <% end %>
  </body>
</html>


